<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CASIO Shopping Website</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="header-content">
            <h1>CASIO Shopping Website</h1>
            <form action="/" method="GET" class="search-form">
                <input type="text" name="search" placeholder="Search products" value="<%= search %>">
                <button type="submit">Search</button>
            </form>
        </div>
    </header>
    <nav>
        <ul>
            <li><a href="/" class="<%= !selectedCategory ? 'active' : '' %>">All</a></li>
            <% categories.forEach(cat => { %>
                <li><a href="/?category=<%= cat.category %>" class="<%= selectedCategory === cat.category ? 'active' : '' %>"><%= cat.category %></a></li>
            <% }); %>
        </ul>
    </nav>
    <main>
        <section class="products">
            <% products.forEach(product => { %>
                <div class="product">
                    <img src="<%= product.image %>" alt="<%= product.name %>">
                    <h2><%= product.name %></h2>
                    <p class="price">$<%= product.price.toFixed(2) %></p>
                    <p><%= product.description %></p>
                    <button onclick="addToCart(<%= JSON.stringify(product) %>)">Add to Cart</button>
                </div>
            <% }); %>
        </section>
    </main>
    <footer>
        <p>&copy; 2023 CASIO Shopping Website</p>
    </footer>
    <div id="cart">
        <h2>Shopping Cart</h2>
        <ul id="cart-items"></ul>
        <p>Total: $<span id="cart-total">0.00</span></p>
    </div>
    <script src="/script.js"></script>
</body>
</html>